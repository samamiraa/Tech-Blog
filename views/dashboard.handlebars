<div class="container-fluid m-auto vh-100" data-bs-theme="dark">
  <div>
    <div class="position-absolute bottom-0 start-50 translate-middle-x">
      <button type="button" class="btn btn-dark" id="create-btn">
        Create New Post
      </button>
    </div>
  </div>

  <div class="m-5 hide">
    <div class="row" id="post-form">
      <h2 class="text-secondary">Create New Post</h2>
      <div class="input-group m-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Title</span>
        <input type="text" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default">
      </div>

      <div class="form-floating m-3">
        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
          style="height: 100px"></textarea>
        <label for="floatingTextarea2">Comments</label>
      </div>

      <button type="button" class="btn btn-dark btn-width">
        Create
      </button>
    </div>
  </div>

</div>


<script src="../js/dashboard.js"></script>