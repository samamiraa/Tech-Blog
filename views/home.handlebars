<div class="container-fluid">
  <div class="row">
    <div class="col-12">

      {{#unless loggedIn}}
      <div class="card text-center m-3">
          
        <div class="card-header">
          Choose One
        </div>
      
        <div class="card-body" id="home-buttons">
          <a href="/api/login" class="btn btn-dark" id="login-btn">Login</a>
          <a href="/api/register" class="btn btn-dark" id="register-btn">Sign Up</a>
        </div>
      
      </div>
     {{/unless}}
    {{#if posts.length}}
      {{#each posts as |post|}}
        {{> main-post-details post}}
      {{/each}}
    {{else}}
      <h2 class="text-secondary m-5">No Current posts</h2>
    {{/if}}
    </div>
  </div>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3" data-bs-theme="dark">
  <div id="userNotLoggedIn" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <strong class="me-auto">Webdec Wizardry</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body text-light">
      No user currently logged in.
    </div>
  </div>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3" data-bs-theme="dark">
  <div id="signInPrompt" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <strong class="me-auto">Webdec Wizardry</strong>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body text-light">
      Please sign in to go to dashboard.
    </div>
  </div>
</div>

<script src="/js/logout.js"></script>
<script src="../js/home.js"></script>