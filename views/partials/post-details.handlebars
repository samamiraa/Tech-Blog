<div class="card m-3" data-bs-theme="dark">
    <a class="text-light" href="/api/post/{{id}}">
        <div class="card-header">
            {{title}}
        </div>

        <div class="card-body">
            {{description}}
        </div>
    </a>
    <div class="card-footer">
        <div class="text-container">
            by {{user.firstName}} on {{format_date createdAt}}
        </div>
        <div class="form-check">
            <input class="form-check-input check-post" type="checkbox" data-id="{{id}}">
            <label class="form-check-label" for="check-post">
                Select
            </label>
        </div>
    </div>

</div>