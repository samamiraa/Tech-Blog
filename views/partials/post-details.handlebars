<div class="card m-3" data-bs-theme="dark">
    <a class="text-light" href="/api/post/{{id}}">
        <div class="card-header">
            {{title}}
        </div>

        <div class="card-body">
            {{description}}
        </div>
    </a>
        <div class="card-footer">
            <div class="text-container">
                by {{user.firstName}} on {{format_date createdAt}}
            </div>
            <div class="button-container">
                <button type="button" data-id="{{id}}" class="btn btn-light btn-sm" id="delete-post-btn">Delete</button>
                <button type="button" class="btn btn-light btn-sm" id="update-post-btn">Update</button>
            </div>
        </div>
    
</div>